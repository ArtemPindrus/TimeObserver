<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="HeaderBrush" Color="Aquamarine" />
    <SolidColorBrush x:Key="ContentBrush" Color="Teal" />
    <Style x:Key="HeaderButton" TargetType="Button">
        <Setter Property="Width" Value="18" />
        <Setter Property="Background" Value="MediumAquamarine" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    <Style x:Key="AddReminderButton" TargetType="Button">
        <Setter Property="Width" Value="30" />
        <Setter Property="Command" Value="{Binding AddCommand}" />
        <Setter Property="Content" Value="Add" />
    </Style>
</ResourceDictionary>